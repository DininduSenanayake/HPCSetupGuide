Host *
     UseKeychain yes
     AddKeysToAgent yes
     ServerAliveInterval 120

Host bmrc1
     hostname cluster1.bmrc.ox.ac.uk
     user xxxxxx
     ForwardAgent yes
     ForwardX11Trusted yes
     ControlMaster auto
     ControlPath ~/.ssh/sockets/ssh-socket-%r-%h-%p
     ControlPersist 24h

